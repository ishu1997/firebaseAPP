<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <TextView
        android:textAlignment="center"
        android:text="Location"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_round"
        >


        <Spinner
            android:id="@+id/job_caetgories"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_margin="5dp"></Spinner>

    </LinearLayout>


        <TextView
            android:textAlignment="center"
            android:text="Jobs categories"
            android:textColor="@color/colorBlack"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_round"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1."
            android:gravity="center"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/job_prefer_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="6"
            ></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_round"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2."
            android:gravity="center"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/job_prefer_2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="6"
            ></Spinner>

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_round"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3."
            android:gravity="center"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/job_prefer_3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="6"
            ></Spinner>

    </LinearLayout>




    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/form_preferences_doneBTN"
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            android:text="next"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>





</LinearLayout>